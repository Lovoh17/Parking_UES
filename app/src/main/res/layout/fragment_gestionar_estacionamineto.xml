<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blanco"
    tools:context=".Fragments.GestionarEstacionamientoFragment">

    <!-- ESPACIADOR PARA TOOLBAR SUPERIOR -->
    <Space
        android:id="@+id/spaceForToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SCROLL VIEW QUE CONTIENE TODO -->
    <ScrollView
        android:id="@+id/scrollViewMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- TITULO DEL MODULO -->
            <androidx.cardview.widget.CardView
                android:id="@+id/tituloGestionEstacionamiento"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/rojo_granate"
                app:cardCornerRadius="12dp">

                <TextView
                    android:id="@+id/textViewTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:letterSpacing="0.05"
                    android:text="GESTION DE ESTACIONAMIENTOS"
                    android:textColor="@color/blanco"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <!-- CONTENEDOR DE ZONAS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- ZONA COMERCIAL -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blanco"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/linearEstacionamientosComerciales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- TITULO ZONA COMERCIAL -->
                        <TextView
                            android:id="@+id/textViewZonaComercial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"
                            android:letterSpacing="0.05"
                            android:text="COMERCIAL"
                            android:textColor="@color/rojo_terroso"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <!-- ESPACIOS COMERCIALES -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardComercial1"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/verde"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:text="COM - 1"
                                android:textColor="@color/crema_claro"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardComercial2"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/amarillo"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:text="COM - 2"
                                android:textColor="@color/azul_noche"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardComercial3"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/rojo"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:text="COM - 3"
                                android:textColor="@color/crema_claro"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardComercial4"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/verde"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:text="COM - 4"
                                android:textColor="@color/crema_claro"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardComercial5"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/verde"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:text="COM - 5"
                                android:textColor="@color/crema_claro"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardComercial6"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:backgroundTint="@color/amarillo"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:text="COM - 6"
                                android:textColor="@color/azul_noche"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ZONA VIP -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blanco"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/linearEstacionamientosVIP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- TITULO ZONA VIP -->
                        <TextView
                            android:id="@+id/textViewZonaVIP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"
                            android:letterSpacing="0.05"
                            android:text="ZONA VIP"
                            android:textColor="@color/azul_noche"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <!-- ESPACIOS VIP -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardVIP1"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/verde"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:text="VIP - 1"
                                android:textColor="@color/crema_claro"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardVIP2"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/rojo"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:text="VIP - 2"
                                android:textColor="@color/crema_claro"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardVIP3"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/verde"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:text="VIP - 3"
                                android:textColor="@color/crema_claro"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardVIP4"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/amarillo"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:text="VIP - 4"
                                android:textColor="@color/azul_noche"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardVIP5"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/verde"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:text="VIP - 5"
                                android:textColor="@color/crema_claro"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardVIP6"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:backgroundTint="@color/rojo"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:text="VIP - 6"
                                android:textColor="@color/crema_claro"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- BOTONES INFERIORES -->
            <LinearLayout
                android:id="@+id/linearHorizontalBtnTarifas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTarifas"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/rojo_sangre"
                    android:letterSpacing="0.05"
                    android:text="VER TARIFAS"
                    android:textColor="@color/crema_claro"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_tarifa_hora"
                    app:iconTint="@color/blanco"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:strokeColor="@color/rojo_terroso"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTarifasVIP"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/terracota_suave"
                    android:letterSpacing="0.05"
                    android:text="TARIFAS VIP"
                    android:textColor="@color/crema_claro"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_vip"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="@color/blanco"
                    app:strokeColor="@color/rojo_terroso"
                    app:strokeWidth="1dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ESPACIADOR PARA NAVEGACION INFERIOR -->

</androidx.constraintlayout.widget.ConstraintLayout>