<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".DashboardFragment">

    <!-- Espaciador para toolbar superior -->
    <Space
        android:id="@+id/spaceForToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView principal -->
    <ScrollView
        android:layout_width="405dp"
        android:layout_height="623dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="52dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SECCIÓN: TITULO DE BIENVENIDA -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/rojo_granate"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <TextView
                    android:id="@+id/lblTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="Bienvenido, Admin"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


            <!-- SECCIÓN: ESTADISTICAS GENERALES -->
            <LinearLayout
                android:id="@+id/containerEstadisticasGenerales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Card: Usuarios -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/blanco"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="Icono usuarios"
                            android:src="@drawable/ic_usuario"
                            android:tint="@color/rojo_ues" />

                        <TextView
                            android:id="@+id/lblContadorUsuarios"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:text="15"
                            android:textColor="@color/azul"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usuarios"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card: Parkeos Comerciales -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/blanco"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="Icono carro"
                            android:src="@drawable/ic_carro"
                            android:tint="@color/gris_oscuro" />

                        <TextView
                            android:id="@+id/lblContadorComerciales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:text="6"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comerciales"
                            android:textAlignment="center"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card: Parkeos VIP -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/blanco"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="Icono carro"
                            android:src="@drawable/ic_carro"
                            android:tint="#FF6B35" />

                        <TextView
                            android:id="@+id/lblContadorVIP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:text="6"
                            android:textColor="#FF6B35"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIP"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- SECCION: ACCIONES RAPIDAS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="start"
                android:paddingHorizontal="8dp"
                android:text="ACCIONES RÁPIDAS"
                android:textColor="@color/gris_oscuro"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Card: Gestión de Usuarios -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnGestionUsuarios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/blanco"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="Icono gestion usuarios"
                            android:src="@drawable/ic_usuario"
                            android:tint="@color/azul" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Gestion de Usuarios"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card: Configuración -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnConfiguracion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/blanco"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="Icono configuracion"
                            android:src="@drawable/ic_correo"
                            android:tint="#FF6B35" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Configuracion"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- SECCIÓN: ACTIVIDADES RECIENTES -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="start"
                android:paddingHorizontal="8dp"
                android:text="ACTIVIDADES RECIENTES"
                android:textColor="@color/gris_oscuro"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/blanco"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Último usuario parqueado -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Icono usuario"
                            android:src="@drawable/ic_usuario"
                            android:tint="@color/azul" />

                        <TextView
                            android:id="@+id/lblUltimoParqueo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Último parqueo: Lino"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Última compra -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Icono compra"
                            android:src="@drawable/ic_tarifa_hora"
                            android:tint="#FF6B35" />

                        <TextView
                            android:id="@+id/lblUltimaCompra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Última compra: Soda"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECCIÓN: LEYENDA DE ESTADOS -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLeyendaDeEstados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/blanco"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:weightSum="3">

                    <!-- Estado: Libre -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <View
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/style_circulo"
                            android:backgroundTint="@color/verde" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Libre"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Estado: Ocupado -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <View
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/style_circulo"
                            android:backgroundTint="@color/rojo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ocupado"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Estado: Reservado -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <View
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/style_circulo"
                            android:backgroundTint="@color/amarillo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reservado"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECCION: ESTADISTICAS DE ESTADOS -->
            <LinearLayout
                android:id="@+id/containerEstadisticasEstados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Card: Libres -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/blanco"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/lblContadorLibres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="7"
                            android:textColor="@color/verde"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Libres"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card: Ocupados -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/blanco"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/lblContadorOcupados"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="3"
                            android:textColor="@color/rojo"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ocupados"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card: Reservados -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/blanco"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/lblContadorReservados"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="2"
                            android:textColor="@color/amarillo"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reservados"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- SECCIÓN: TÍTULO DEL MAPA -->
            <TextView
                android:id="@+id/mapaTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="MAPA DEL ESTACIONAMIENTO"
                android:textColor="@color/gris_oscuro"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- SECCION: MAPA DE ESTACIONAMIENTO -->
            <LinearLayout
                android:id="@+id/containerZonas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- ZONA COMERCIAL -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blanco"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/linearEstacionamientosComerciales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Título Zona Comercial -->
                        <TextView
                            android:id="@+id/textViewZonaComercial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"
                            android:letterSpacing="0.05"
                            android:text="COMERCIAL"
                            android:textColor="@color/rojo_terroso"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <!-- Espacios Comerciales -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardComercial1"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/verde"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:text="COM - 1"
                                android:textColor="@color/crema_claro"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardComercial2"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/amarillo"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:text="COM - 2"
                                android:textColor="@color/azul_noche"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardComercial3"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/rojo"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:text="COM - 3"
                                android:textColor="@color/crema_claro"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardComercial4"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/verde"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:text="COM - 4"
                                android:textColor="@color/crema_claro"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardComercial5"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/verde"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:text="COM - 5"
                                android:textColor="@color/crema_claro"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardComercial6"
                            android:layout_width="match_parent"
